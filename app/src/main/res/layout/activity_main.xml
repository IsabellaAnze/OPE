<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/texto_login"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="BEM-VINDO!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/cad_name_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/campo_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/cad_password_hint"
        android:inputType="textPassword" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        android:padding="10dp">

        <Button
            android:id="@+id/botao_login"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:stateListAnimator="@null"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold" />


    </FrameLayout>

    <ImageView
        android:id="@+id/campo_imagem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/login_aquarela"/>



</LinearLayout>

